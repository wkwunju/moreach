# =============================================================================
# Moreach Backend Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# ==================== LLM Provider ====================
LLM_PROVIDER=gemini
DORK_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# ==================== Vector Database ====================
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX=your-index-name
PINECONE_HOST=https://your-index.svc.pinecone.io

# ==================== Apify (Web Scraping) ====================
APIFY_TOKEN=your-apify-token
APIFY_GOOGLE_ACTOR=apify~google-search-scraper
APIFY_INSTAGRAM_ACTOR=apify~instagram-scraper

# ==================== Reddit API Provider ====================
# Options: "apify" (default) or "rapidapi" (Plan B)
REDDIT_API_PROVIDER=apify

# RapidAPI Reddit (when REDDIT_API_PROVIDER=rapidapi)
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_REDDIT_HOST=reddit60.p.rapidapi.com

# ==================== Database & Cache ====================
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=sqlite:///./app.db

# Database Migration Strategy
# Set to "true" in production to use Alembic migrations instead of create_all()
# When true, run "alembic upgrade head" before starting the app
USE_ALEMBIC=false

# ==================== LangChain Feature Flags ====================
USE_LANGCHAIN_CHAINS=true
USE_LANGCHAIN_EMBEDDINGS=false
USE_LANGCHAIN_VECTORSTORE=false

# ==================== Email (SendGrid) ====================
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=hello@yourdomain.com
FRONTEND_URL=http://localhost:3000

# ==================== Authentication ====================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# JWT Secret (change this in production!)
SECRET_KEY=your-secret-key-change-this-in-production

# ==================== Stripe Billing ====================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs
STRIPE_PRICE_STARTER_MONTHLY=price_xxx
STRIPE_PRICE_STARTER_ANNUALLY=price_xxx
STRIPE_PRICE_GROWTH_MONTHLY=price_xxx
STRIPE_PRICE_GROWTH_ANNUALLY=price_xxx
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_ANNUALLY=price_xxx

# ==================== Scheduled Polling ====================
# Enable scheduled polling (set to true in production)
ENABLE_SCHEDULED_POLLING=false

# Poll times in UTC hours (comma-separated)
# Starter plans: 2x/day - Europe morning (8am CET) and US West Coast morning (8am PST)
POLL_TIMES_STARTER=7,16
# Growth/Pro plans: 4x/day
POLL_TIMES_PREMIUM=7,11,16,22
